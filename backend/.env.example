# Environment Variables for Primus Character Creator Backend

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/primus-characters?retryWrites=true&w=majority

# Server Configuration
PORT=3001
NODE_ENV=development

# Firebase Admin SDK Configuration
# Get these from Firebase Console > Project Settings > Service Accounts
# Generate a new private key and replace the values below
FIREBASE_PROJECT_ID=primus-character-creator
FIREBASE_PRIVATE_KEY_ID=your_private_key_id_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@primus-character-creator.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id_here
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40primus-character-creator.iam.gserviceaccount.com

# CORS Configuration
CORS_ORIGIN=http://localhost:5173